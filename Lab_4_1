#include <stdio.h>
#include <math.h>

int main() {
    int x, y, z;
    double b;

    while (1) {

        printf("Введіть значення x: ");
        scanf("%d", &x);
        printf("Введіть значення y: ");
        scanf("%d", &y);
        printf("Введіть значення z: ");
        scanf("%d", &z);
        
        if ((pow(x, 4) / 2) - pow(sin(z), 2) != 0) {
            break;
        } else {
            printf(" Задайте інші значення. \n");
        }
    }

    b = (1 + cos(y - 2)) / ((pow(x, 4) / 2) - pow(sin(z), 2));

    printf("Значення функції b: %lf\n", b);

    return 0;
}
